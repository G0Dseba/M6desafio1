<div class="container mt-4">
  <p>
    <strong>Título:</strong>
    <%= @pelicula.titulo %>
  </p>

  <p>
    <strong>Cliente Asignado:</strong>
    <%= @pelicula.cliente ? @pelicula.cliente.nombre : 'No asignado' %>
  </p>

  <div class="mt-3 d-flex flex-wrap gap-2">
    <%= link_to 'Editar', edit_pelicula_path(@pelicula), class: 'btn btn-dark' %>
    <%= link_to 'Volver a las Películas', peliculas_path, class: 'btn btn-secondary' %>
    <%= button_to 'Eliminar', @pelicula, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger' %>
  </div>
</div>

