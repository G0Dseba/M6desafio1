<p class="text-success"><%= notice %></p>

<% content_for :title, "Películas" %>

<div class="container mt-4">
  <h1 id="titulo-blockbuster" class="mb-4">Películas</h1>

  <%= link_to 'Nueva Película', new_pelicula_path, class: 'btn btn-warning' %>

  <table class="table mt-4">
    <thead>
      <tr>
        <th>Título</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @peliculas.each do |pelicula| %>
        <tr>
          <td><%= pelicula.titulo %></td>
          <td>
            <%= link_to 'Mostrar', pelicula, class: 'btn btn-link text-warning' %>
            <%= link_to 'Editar', edit_pelicula_path(pelicula), class: 'btn btn-link text-warning' %>
            <%= link_to 'Eliminar', pelicula, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-warning' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


