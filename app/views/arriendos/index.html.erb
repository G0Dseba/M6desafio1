<p class="text-success"><%= notice %></p>

<% content_for :title, "Arriendos" %>

<div class="container mt-4">
  <h1 id="titulo-blockbuster" class="mb-4">Arriendos</h1>

  <%= link_to 'Nuevo Arriendo', new_arriendo_path, class: 'btn btn-warning' %>

  <table class="table mt-4">
    <thead>
      <tr>
        <th>Película</th>
        <th>Cliente</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @arriendos.each do |arriendo| %>
        <tr>
          <td><%= arriendo.pelicula.titulo %></td>
          <td><%= arriendo.cliente.nombre %></td>
          <td>
            <%= link_to 'Mostrar', arriendo, class: 'btn btn-link text-warning' %>
            <%= link_to 'Editar', edit_arriendo_path(arriendo), class: 'btn btn-link text-warning' %>
            <%= link_to 'Eliminar', arriendo, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-warning' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
